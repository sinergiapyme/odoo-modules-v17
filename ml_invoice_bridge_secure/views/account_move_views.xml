<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario - CORREGIDA con campos que existen -->
    <record id="view_move_form_ml_extension" model="ir.ui.view">
        <field name="name">account.move.form.ml.extension</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <!-- CORREGIDO: usar método que existe y campos que existen -->
                <button name="action_upload_to_ml" 
                        string="Upload to MercadoLibre" 
                        type="object" 
                        class="btn-primary" 
                        attrs="{'invisible': ['|', ('is_ml_sale', '=', False), '|', ('ml_uploaded', '=', True), ('state', '!=', 'posted')]}"/>
            </xpath>
            
            <!-- CORREGIDO: usar solo campos que existen en account_move.py -->
            <xpath expr="//field[@name='ref']" position="after">
                <group name="mercadolibre_info" string="MercadoLibre" attrs="{'invisible': [('is_ml_sale', '=', False)]}">
                    <field name="is_ml_sale"/>
                    <field name="ml_pack_id" attrs="{'required': [('is_ml_sale', '=', True)]}"/>
                    <field name="ml_uploaded" readonly="1"/>
                    <field name="ml_upload_date" readonly="1" attrs="{'invisible': [('ml_upload_date', '=', False)]}"/>
                    <field name="upload_status" readonly="1" attrs="{'invisible': [('upload_status', '=', 'pending')]}"/>
                    <field name="last_upload_attempt" readonly="1" attrs="{'invisible': [('last_upload_attempt', '=', False)]}"/>
                    <field name="upload_error" readonly="1" attrs="{'invisible': [('upload_error', '=', False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- CORREGIDO: Acción con campos que existen -->
    <record id="action_invoice_ml_sales" model="ir.actions.act_window">
        <field name="name">MercadoLibre Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <!-- CORREGIDO: Solo facturas ML pendientes usando campos que existen -->
        <field name="domain">[('is_ml_sale', '=', True), ('ml_uploaded', '=', False)]</field>
        <field name="context">{'default_is_ml_sale': True, 'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay facturas de MercadoLibre pendientes
            </p>
            <p>
                Las facturas de MercadoLibre pendientes de subir aparecerán aquí.
                Asegúrate de marcar las facturas como "ML Sale" y asignarles un Pack ID.
            </p>
        </field>
    </record>
</odoo>
