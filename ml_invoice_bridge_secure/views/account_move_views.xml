<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista principal de formulario -->
    <record id="view_move_form_ml_extension" model="ir.ui.view">
        <field name="name">account.move.form.ml.extension</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Bot√≥n principal en header -->
            <xpath expr="//header" position="inside">
                <button name="action_upload_to_mercadolibre" 
                        string="üì§ Upload to MercadoLibre" 
                        type="object" 
                        class="btn-primary" 
                        invisible="not is_ml_sale or ml_uploaded or state != 'posted'"
                        confirm="¬øConfirma subir esta factura a MercadoLibre?"/>
                
                <button name="action_reset_ml_upload" 
                        string="üîÑ Reset ML Upload" 
                        type="object" 
                        class="btn-warning" 
                        groups="base.group_system"
                        invisible="not ml_uploaded"
                        confirm="¬øEst√° seguro de resetear el estado de upload?"/>
            </xpath>
            
            <!-- Campos ML en secci√≥n organizada -->
            <xpath expr="//field[@name='ref']" position="after">
                <group name="mercadolibre_info" string="üì¶ MercadoLibre" invisible="not is_ml_sale">
                    <group name="ml_basic" string="Informaci√≥n B√°sica">
                        <field name="is_ml_sale" string="Venta ML"/>
                        <field name="ml_pack_id" 
                               string="Pack ID" 
                               placeholder="Ej: 2000008457814991"
                               widget="char"
                               options="{'size': 20}"/>
                    </group>
                    
                    <group name="ml_status" string="Estado del Upload" invisible="not ml_pack_id">
                        <field name="ml_uploaded" string="Subida a ML" readonly="1"/>
                        <field name="upload_status" 
                               string="Estado" 
                               readonly="1" 
                               widget="badge"
                               decoration-success="upload_status == 'uploaded'"
                               decoration-info="upload_status == 'uploading'"
                               decoration-warning="upload_status == 'pending'"
                               decoration-danger="upload_status == 'error'"/>
                        <field name="ml_upload_date" string="Fecha de subida" readonly="1" invisible="not ml_upload_date"/>
                        <field name="last_upload_attempt" string="√öltimo intento" readonly="1" invisible="not last_upload_attempt"/>
                    </group>
                    
                    <group name="ml_error" string="‚ö†Ô∏è Error Details" invisible="not upload_error">
                        <field name="upload_error" 
                               string="Error" 
                               readonly="1" 
                               widget="text"
                               nolabel="1"/>
                    </group>
                    
                    <group name="ml_debug" string="üîç Debug Info" groups="base.group_no_one">
                        <field name="invoice_origin" string="Invoice Origin" readonly="1"/>
                        <button name="action_fix_ml_data_from_sale_orders" 
                                string="üîß Fix ML Data" 
                                type="object" 
                                class="btn-warning"
                                invisible="is_ml_sale"
                                help="Intentar corregir datos ML desde Sale Orders vinculadas"/>
                        <button name="action_test_pdf_generation" 
                                string="üß™ Test PDF" 
                                type="object" 
                                class="btn-secondary"
                                invisible="not is_ml_sale"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Vista tree con campos ML -->
    <record id="view_move_tree_ml_extension" model="ir.ui.view">
        <field name="name">account.move.tree.ml.extension</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="is_ml_sale" invisible="1"/>
                <field name="ml_pack_id" string="Pack ID" optional="hide" invisible="not is_ml_sale"/>
                <field name="upload_status" 
                       string="ML Status" 
                       optional="show"
                       invisible="not is_ml_sale"
                       widget="badge"
                       decoration-success="upload_status == 'uploaded'"
                       decoration-danger="upload_status == 'error'"/>
            </xpath>
        </field>
    </record>

    <!-- Search view mejorado -->
    <record id="view_move_search_ml_extension" model="ir.ui.view">
        <field name="name">account.move.search.ml.extension</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='posted']" position="after">
                <separator/>
                <filter string="MercadoLibre Sales" name="filter_ml_sales" domain="[('is_ml_sale', '=', True)]"/>
                <filter string="ML Not Uploaded" name="filter_not_uploaded" domain="[('is_ml_sale', '=', True), ('ml_uploaded', '=', False)]"/>
                <filter string="ML Upload Errors" name="filter_upload_errors" domain="[('upload_status', '=', 'error')]"/>
                <filter string="ML Uploaded" name="filter_uploaded" domain="[('ml_uploaded', '=', True)]"/>
                <filter string="üîç Possible ML Missing Data" 
                        name="filter_possible_ml_missing" 
                        domain="[('is_ml_sale', '=', False), ('invoice_origin', 'ilike', 'mercado')]"/>
            </xpath>
            
            <xpath expr="//group[@name='groupby']" position="inside">
                <filter string="ML Upload Status" name="group_upload_status" context="{'group_by': 'upload_status'}"/>
            </xpath>
            
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="ml_pack_id" string="Pack ID"/>
            </xpath>
        </field>
    </record>

    <!-- Action para facturas ML -->
    <record id="action_invoice_ml_sales" model="ir.actions.act_window">
        <field name="name">Facturas MercadoLibre</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_ml_sale', '=', True)]</field>
        <field name="context">{
            'default_is_ml_sale': True, 
            'create': False,
            'search_default_filter_not_uploaded': 1
        }</field>
        <field name="search_view_id" ref="view_move_search_ml_extension"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay facturas de MercadoLibre
            </p>
            <p>
                Las facturas de MercadoLibre aparecer√°n aqu√≠ autom√°ticamente cuando ODUMBO sincronice las ventas.<br/>
                <strong>Proceso:</strong>
            </p>
            <ol>
                <li>ODUMBO sincroniza venta ML ‚Üí Sale Order</li>
                <li>Se genera factura desde Sale Order (individual o lote)</li>
                <li>Factura se auto-detecta como ML</li>
                <li>Usar bot√≥n "Upload to MercadoLibre" para subir</li>
            </ol>
        </field>
    </record>

    <!-- Acci√≥n para corregir datos ML -->
    <record id="action_fix_ml_data_invoices" model="ir.actions.server">
        <field name="name">Fix ML Data from Sale Orders</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
records_to_fix = records.filtered(lambda r: not r.is_ml_sale and r.move_type in ['out_invoice', 'out_refund'])
if records_to_fix:
    action = records_to_fix.action_fix_ml_data_from_sale_orders()
else:
    action = {
        'type': 'ir.actions.client',
        'tag': 'display_notification',
        'params': {
            'title': 'Sin Facturas para Corregir',
            'message': 'Seleccione facturas que no sean de ML para intentar corregir.',
            'type': 'warning'
        }
    }
        </field>
    </record>
</odoo>
