<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View - CON todos los botones funcionando -->
    <record id="view_mercadolibre_log_tree" model="ir.ui.view">
        <field name="name">mercadolibre.log.tree</field>
        <field name="model">mercadolibre.log</field>
        <field name="arch" type="xml">
            <tree string="Upload Logs" default_order="create_date desc" create="false">
                <field name="create_date"/>
                <field name="invoice_id"/>
                <field name="pack_id"/>
                <field name="status" 
                       decoration-success="status == 'success'"
                       decoration-danger="status == 'error'"/>
                <field name="message"/>
                <!-- Botones de acción funcionando -->
                <button name="action_view_invoice" 
                        type="object" 
                        icon="fa-external-link" 
                        title="View Invoice"
                        invisible="invoice_id == False"/>
                <button name="action_retry_upload" 
                        type="object" 
                        icon="fa-refresh" 
                        title="Retry Upload"
                        invisible="status == 'success' or invoice_id == False"
                        confirm="¿Está seguro de reintentar la subida de esta factura?"/>
            </tree>
        </field>
    </record>

    <!-- Form View - CON header buttons -->
    <record id="view_mercadolibre_log_form" model="ir.ui.view">
        <field name="name">mercadolibre.log.form</field>
        <field name="model">mercadolibre.log</field>
        <field name="arch" type="xml">
            <form string="Upload Log" create="false" edit="false">
                <header>
                    <button name="action_view_invoice" 
                            string="View Invoice" 
                            type="object"
                            class="btn-primary"
                            invisible="invoice_id == False"/>
                    <button name="action_retry_upload" 
                            string="Retry Upload" 
                            type="object"
                            class="btn-secondary"
                            invisible="status == 'success' or invoice_id == False"
                            confirm="¿Está seguro de reintentar la subida de esta factura?"/>
                </header>
                <sheet>
                    <group>
                        <group string="Operation Details">
                            <field name="create_date"/>
                            <field name="invoice_id"/>
                            <field name="pack_id"/>
                            <field name="status"/>
                        </group>
                    </group>
                    
                    <group string="Message" invisible="message == False">
                        <field name="message" nolabel="1"/>
                    </group>
                    
                    <group string="MercadoLibre Response" invisible="ml_response == False">
                        <field name="ml_response" nolabel="1" widget="ace" options="{'mode': 'json'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View - COMPLETAMENTE CORREGIDOS -->
    <record id="view_mercadolibre_log_search" model="ir.ui.view">
        <field name="name">mercadolibre.log.search</field>
        <field name="model">mercadolibre.log</field>
        <field name="arch" type="xml">
            <search string="Upload Logs">
                <field name="invoice_id"/>
                <field name="pack_id"/>
                <field name="message"/>
                
                <!-- Filtros básicos -->
                <filter string="Success" name="filter_success" domain="[('status', '=', 'success')]"/>
                <filter string="Errors" name="filter_errors" domain="[('status', '=', 'error')]"/>
                
                <separator/>
                
                <!-- Filtros de fecha -->
                <filter string="Today" name="filter_today" 
                        domain="[('create_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter string="This Week" name="filter_week" 
                        domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="filter_month" 
                        domain="[('create_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                
                <!-- Filtros de estado CORREGIDOS - SOLO campos que existen -->
                <filter string="Pending Upload" name="filter_pending" 
                        domain="[('status', '=', 'error'), ('invoice_id.ml_uploaded', '=', False)]"/>
                <filter string="Successfully Uploaded" name="filter_uploaded" 
                        domain="[('status', '=', 'success'), ('invoice_id.ml_uploaded', '=', True)]"/>
                
                <!-- Agrupaciones -->
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'create_date:day'}"/>
                    <filter string="Invoice" name="group_by_invoice" context="{'group_by': 'invoice_id'}"/>
                    <filter string="Pack ID" name="group_by_pack" context="{'group_by': 'pack_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action principal -->
    <record id="action_mercadolibre_log" model="ir.actions.act_window">
        <field name="name">Upload Logs</field>
        <field name="res_model">mercadolibre.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_errors': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No upload logs yet
            </p>
            <p>
                Upload logs will appear here when you start uploading invoices to MercadoLibre.
                Both successful uploads and errors will be logged for auditing purposes.
            </p>
            <p>
                <strong>Available actions:</strong><br/>
                • Click the external link icon to view the related invoice<br/>
                • Click the refresh icon to retry failed uploads<br/>
                • Use filters to find specific logs or errors<br/>
            </p>
        </field>
    </record>

    <!-- Action para retry en bulk -->
    <record id="action_retry_upload_bulk" model="ir.actions.server">
        <field name="name">Retry Upload</field>
        <field name="model_id" ref="model_mercadolibre_log"/>
        <field name="binding_model_id" ref="model_mercadolibre_log"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.action_retry_upload_bulk()</field>
    </record>

    <!-- Vista heredada para agregar botones de testing a facturas - LIMPIA -->
    <record id="view_account_move_form_inherit_ml_testing" model="ir.ui.view">
        <field name="name">account.move.form.inherit.ml.testing</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <!-- Botón principal de upload -->
                <button name="action_upload_to_ml" 
                        type="object" 
                        string="Upload to ML" 
                        class="btn-primary"
                        attrs="{'invisible': [('pack_id', '=', False)]}"
                        confirm="¿Está seguro de subir esta factura a MercadoLibre?"/>
                
                <!-- Botones de testing (solo para administradores) -->
                <button name="action_test_pdf_generation" 
                        type="object" 
                        string="Test PDF Generation" 
                        class="btn-secondary"
                        groups="base.group_no_one"/>
                
                <button name="action_test_with_working_record" 
                        type="object" 
                        string="Test Working Record" 
                        class="btn-secondary"
                        groups="base.group_no_one"/>
                
                <button name="action_debug_available_reports" 
                        type="object" 
                        string="Debug Reports" 
                        class="btn-secondary"
                        groups="base.group_no_one"/>
                
                <button name="action_test_exact_gui_report" 
                        type="object" 
                        string="Test GUI Reports" 
                        class="btn-secondary"
                        groups="base.group_no_one"/>
            </xpath>
            
            <!-- Agregar campos ML - SOLO campos que existen -->
            <xpath expr="//field[@name='ref']" position="after">
                <group name="mercadolibre_info" string="MercadoLibre" invisible="not pack_id">
                    <field name="pack_id"/>
                    <field name="is_ml_sale"/>
                    <field name="ml_uploaded" readonly="1"/>
                    <field name="ml_upload_date" readonly="1" invisible="not ml_upload_date"/>
                    <field name="upload_status" readonly="1" invisible="upload_status == 'pending'"/>
                    <field name="last_upload_attempt" readonly="1" invisible="not last_upload_attempt"/>
                    <field name="upload_error" readonly="1" invisible="not upload_error"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
